# ─── Backend Environment (.env) ────────────────────
# Copy this to backend/.env and fill in your values

# ── Server ────────────────────────────────────────
PORT=5555
NODE_ENV=development

# ── MongoDB ───────────────────────────────────────
MONGO_URI=mongodb+srv://USER:PASS@cluster.mongodb.net/bermuda?retryWrites=true&w=majority

# ── CORS ──────────────────────────────────────────
# Dev: allow Vite dev server
# Prod: your frontend domain(s), comma-separated
CORS_ORIGINS=http://localhost:5173

# ── Admin Auth ────────────────────────────────────
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_password_here
JWT_SECRET=your_jwt_secret_here

# ── Email (SMTP) ──────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
MAIL_ADMIN=bermudavendeghazvese@gmail.com
MAIL_FROM=Bermuda Vendégház <your_email@gmail.com>

# ── Cloudinary ────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ── App ───────────────────────────────────────────
APP_URL=http://localhost:5173
